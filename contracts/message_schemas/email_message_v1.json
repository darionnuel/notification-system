{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EmailNotification",
  "type": "object",
  "required": ["to", "subject", "body"],
  "properties": {
    "to": { "type": "string", "format": "email" },
    "subject": { "type": "string", "minLength": 1 },
    "body": { "type": "string" },
    "variables": { "type": "object", "additionalProperties": true }
  }
}
