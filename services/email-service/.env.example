# Database
DATABASE_URL=postgresql://user:password@localhost:5432/email_db
DATABASE_POOL_SIZE=20

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE_NAME=email.queue
RABBITMQ_FAILED_QUEUE=failed.queue

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@notification.app
SMTP_FROM_NAME=Notification System
SMTP_USE_TLS=True

# Service Configuration
SERVICE_NAME=email-service
SERVICE_PORT=8002
SERVICE_ENV=development
DEBUG=False
LOG_LEVEL=INFO

# Template Service
TEMPLATE_SERVICE_URL=http://localhost:8001
TEMPLATE_SERVICE_TIMEOUT=5

# Redis
REDIS_URL=redis://localhost:6379/1

# Email Configuration
MAX_RETRY_ATTEMPTS=3
INITIAL_RETRY_DELAY=2
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60